<?xml version="1.0" encoding="UTF-8"?>
<Configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xmlns="https://logging.apache.org/xml/ns"
               xsi:schemaLocation="
                   https://logging.apache.org/xml/ns
                   https://logging.apache.org/xml/ns/log4j-config-2.xsd"
               status="WARN"
               monitorInterval="30">

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%blue{%d{HH:mm:ss}} %highlight{[%t/%p]} %magenta{%c(%F:%L)} %msg%n"
                           disableAnsi="false"
                           noConsoleNoAnsi="false"
                           charset="UTF-8"/>
        </Console>

        <RollingFile name="File"
                     fileName="${sys:app.logs.dir}/serverlistexplorer-dev.log"
                     filePattern="${sys:app.logs.dir}/sle-dev-%d{yyyy-MM-dd}-%i.zip"
                     append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t/%threadId/%p] %c %l PID=%pid - %msg%ex%n"
                           charset="UTF-8"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="50 MB"/>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <DefaultRolloverStrategy max="5"/>
        </RollingFile>

        <Async name="AsyncConsole" includeLocation="true">
            <AppenderRef ref="Console"/>
        </Async>
        <Async name="AsyncFile">
            <AppenderRef ref="File"/>
        </Async>
    </Appenders>

    <Loggers>
        <Logger name="org.xbill" level="OFF" additivity="false"/>

        <Root level="DEBUG">
            <AppenderRef ref="AsyncConsole"/>
            <AppenderRef ref="AsyncFile"/>
        </Root>
    </Loggers>
</Configuration>
